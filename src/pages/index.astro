---
import { Picture } from '@astrojs/image/components'

import Layout from '../app/components/layout.astro'
---

<Layout path="/" noPadding>
  <Picture
    src="/front.jpg"
    aspectRatio={1.33}
    alt="cover"
    decoding="async"
    widths={[3200]}
    quality={85}
    sizes=""
    id="cover"
    formats={['jpg', 'webp']}
    background="white"
  />
</Layout>

<style is:global>
  picture, img#cover {
    display: flex;
    width: 100%;
    height: 100vh;
    max-height: -webkit-fill-available;
    object-fit: cover;
  }
</style>
