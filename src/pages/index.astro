---
import CfImage from '$core/components/cfImage.astro'
import Layout from '../app/components/layout.astro'

export const prerender = true
---

<Layout noPadding>
  <CfImage
    id="cover"
    src="./front.jpg"
    width={{
      sm: 640,
      md: 768,
      lg: 1024,
      xl: 1280,
      max: 2000,
    }}
    ratio={1.33}
    fetchpriority="high"
    decoding="async"
    alt="cover"
  />
</Layout>

<style is:global>
  picture,
  img#cover {
    display: flex;
    width: 100%;
    height: 100vh;
    max-height: -webkit-fill-available;
    object-fit: cover;
  }
</style>
