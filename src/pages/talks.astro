---
import Layout from '../app/components/layout.astro'
import { talks } from '../modules/talks/constants/talks'
---

<Layout title="Talks" path="/talks">
  <div class="mx-auto mt-10 max-w-7xl px-4 pb-6 md:px-6">
    <section class="my-8">
      <h1 class="text-xl">
        I am an experienced public speaker who is able to deliver keynote talks,
        as well as participate in panels and networking. Furthermore, I also
        joined the group of <a href="https://www.creatorsgarten.org/"
          >Creatorsgarten</a
        > to help organize various events in the past, and future.
      </h1>
    </section>

    <section class="mx-auto max-w-5xl space-y-8">
      {
        talks.map(talk => (
          <div class="divide-y-2 divide-dotted divide-gray-300 rounded-xl border bg-white py-8 shadow-md">
            <div class="px-8 pb-6">
              <h1 class="text-2xl font-bold">{talk.title}</h1>
              <p class="mt-1 text-gray-700">
                {talk.event} Â· <span class="font-semibold">{talk.year}</span>
              </p>
              <div class="mt-1 flex flex-wrap space-x-2">
                {talk.links.map(link => (
                  <a href={link.url} class="my-1">
                    {link.label}
                  </a>
                ))}
              </div>
            </div>
            <p class="px-8 pt-8">{talk.description}</p>
          </div>
        ))
      }
    </section>
  </div>
</Layout>
