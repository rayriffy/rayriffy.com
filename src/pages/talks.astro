---
import Layout from '$app/components/layout.astro'
import SEO from '$core/components/seo.astro'
import NewCard from '$core/components/card.astro'

import { talks } from '$modules/talks/constants/talks'
---

<Layout>
  <SEO
    slot="seo"
    title="Talks"
    description="I am an experienced public speaker who is able to deliver keynote talks, as well as participate in panels and networking."
  />

  <div class="mx-auto mt-10 max-w-7xl px-4 pb-6 md:px-6">
    <section class="my-8">
      <h1 class="text-xl">
        I am an experienced public speaker who is able to deliver keynote talks,
        as well as participate in panels and networking. Furthermore, I also
        joined the group of <a href="https://www.creatorsgarten.org/"
          >Creatorsgarten</a
        > to help organize various events in the past, and future.
      </h1>
    </section>

    <section class="mx-auto grid max-w-5xl sm:grid-cols-2 gap-4">
      {
        talks.map(talk => (
          <NewCard
            title={talk.title}
            href={talk.links[talk.href]}
            image={talk.image}
            bottom={talk.links}
          >
            <p class="text-gray-700">
              {talk.event}
              <span> Â· </span>
              <span class="font-semibold">{talk.year}</span>
            </p>
            <p>{talk.description}</p>
          </NewCard>
        ))
      }
    </section>
  </div>
</Layout>
