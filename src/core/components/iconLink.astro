---
import { Icon } from 'astro-icon/components'

export interface Props {
  name: string
  href?: string
}

const { name, href } = Astro.props
---

{href && (
  <a
    href={href}
    target="_blank"
    rel="noreferrer"
    class="flex items-center space-x-1 no-underline"
  >
    <Icon name={name} class="h-4 w-auto" />
  </a>
)}
