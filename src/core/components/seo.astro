---
import { SEO } from 'astro-seo'

export interface Props {
  title?: string
  description?: string
  image?: string
  noindex?: boolean
}

const {
  title,
  description,
  image,
  noindex = false,
} = Astro.props
const transformedTitle = title ? `${title} Â· rayriffy` : 'rayriffy'
---

<SEO
  title={transformedTitle}
  description={description}
  openGraph={image ? {
    basic: {
      title: transformedTitle,
      type: 'website',
      image: image!,
    },
  } : undefined}
  twitter={image ? {
    creator: '@rayriffy',
    card: 'summary_large_image',
    site: 'https://rayriffy.com',
    title: transformedTitle,
    image,
    description,
  } : undefined}
  noindex={noindex}
/>
