---
import MenuIcon from './menuIcon.astro'
import R from './r.astro'

import { paths } from '../constants/paths'

export interface Props {
  path: string
}

const { path } = Astro.props

const targetPath = paths.find(o => o.path === path && o.hidden !== true)
---

<div class="max-w-7xl mx-auto my-6 px-4 md:px-6">
	<nav class="navbar bg-base-100 rounded-2xl shadow-lg">
		<div class="navbar-start">
			<div class="dropdown">
				<label for="#header-menu" tabindex="0" class="btn btn-ghost btn-circle">
					<MenuIcon class="w-6 h-6" />
				</label>
				<ul id="header-menu" tabindex="0" class="menu menu-compact dropdown-content mt-4 p-2 shadow bg-base-100 rounded-box w-52">
          {paths.map(path => (
						<li>
							<a rel="prefetch" href={path.path} class="font-medium hover:text-blue-400 animate-rainbow text-base">
								{path.name}
							</a>
						</li>
          ))}
				</ul>
			</div>
		</div>
		<div class="navbar-center space-x-2">
			<a rel="prefetch" class="btn btn-ghost normal-case text-xl px-2" href="/">
				<R class="w-9 h-9" />
			</a>
			{targetPath !== undefined && (
				<h1 class="mr-4 font-bold text-lg">{targetPath.name}</h1>
      )}
		</div>
		<div class="navbar-end">
		</div>
	</nav>
</div>
