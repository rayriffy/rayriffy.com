---
import CfImage from '$core/components/cfImage.astro'

export interface Props {
  src: string
}

const { src } = Astro.props
---

<CfImage
  id="cover"
  src={src}
  width={{
    sm: 640,
    md: 768,
    lg: 1024,
    xl: 1280,
    max: 2000,
  }}
  ratio={1.33}
  fetchpriority="high"
  decoding="async"
  alt="cover"
/>

<style is:global>
  picture,
  img#cover {
    @apply h-screen w-screen shrink-0 snap-center object-cover;
  }
</style>
