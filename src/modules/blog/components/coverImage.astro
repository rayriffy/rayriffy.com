---
import { Image } from 'astro:assets'

export interface Props {
  src: {
    src: string;
    height: number;
    width: number;
    format: "avif" | "png" | "webp" | "jpeg" | "jpg" | "svg" | "tiff" | "gif";
  }
  alt: string
  class?: string
}

const { src, alt, class: className } = Astro.props
---

<Image
  src={src}
  alt={alt}
  class={className}
/>
