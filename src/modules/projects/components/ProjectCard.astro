---
import Card from '$core/components/card.astro';

import type { Project } from '../@types/Project'

export interface Props {
  project: Project
}

const { title, year, active, links, description } = Astro.props.project
---

<Card
  heading={{
    title,
    subHeading: {
      right: `${year}${active ? ' - Present' : ''}`
    },
    links: links.map(link => ({
      label: link.label,
      href: link.url,
    }))
  }}
>
  {description}
</Card>
